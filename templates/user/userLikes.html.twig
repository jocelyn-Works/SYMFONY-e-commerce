                        {% for loopIndex, image in product.images %}
                        <img src="{{ asset('uploads/products/' ~ image.name) }}" {% if loopIndex> 0 %}style="display:
                        none;"{% endif %} />
                        {% endfor %}
                    </div>
                    <div class="product-description">
                        <ul>
